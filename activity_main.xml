<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_heigth="729dp"
        android:orientation="vertical"
    tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:backgroundTint="@color/white"
        tools:ignore="MissingConstraints" android:layout_height="wrap_content">


        <TextView  style="@style/BoldText"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="0px"
            android:height="120px"
            android:background="@drawable/connect" />

        <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
            android:layout_marginTop="25px"
        android:width="120px"
        android:height="120px"
            android:text="E-mail :"
          android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:layout_below="@id/textView"
            android:id="@+id/modpasseEditText"
            android:layout_width="482dp"
            android:layout_height="50dp"
            android:layout_marginStart="-82dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tvName"
            android:background="@drawable/input"
            android:backgroundTint="#ADA6B5"
            android:backgroundTintMode="src_in"
            android:hint="                        Votre adresse email..."
            android:inputType="textEmailAddress"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="25px"
            android:width="120px"
            android:height="120px"
            android:text="Mot de passe :"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:layout_marginStart="-82dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/tvName"
            android:background="@drawable/input"
            android:backgroundTint="#ADA6B5"
            android:backgroundTintMode="src_in"
            android:hint="                        Votre mot de passe..."
            android:inputType="textEmailAddress"
            android:visibility="visible" />
<Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_marginLeft="80px"
        android:layout_marginTop="30px"
        android:layout_marginRight="80px"
        android:backgroundTint="#57BF07"
        android:onClick="chercher"
        android:text="Se connecter"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_margin="18dp"
            android:layout_marginTop="1dp"
            android:text="Garder ma session active"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/keepLoggedInCheckBox"
            android:text="  Mot de passe oubliÃ©?"
            android:paddingTop="1dp"
            android:marginTop="10dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="0px"
            android:height="120px"
            android:background="@drawable/ou" />

        <TextView
            android:id="@+id/textView4"
            android:textSize="19dp"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:height="120px"
            android:autoLink="web"
            android:background="@drawable/imagegris"
            android:paddingLeft="80dp"
            android:paddingTop="16dp"
            android:text="Vous n'avez pas encore de compte ? "
            android:textStyle="bold"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/signupTextView"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50px"
            android:autoLink="web"
            android:background="@drawable/imagegris"
            android:onClick="openWebsite"
            android:paddingLeft="150dp"
            android:paddingTop="0dp"
            android:text="Inscrivez-vous ici"
            android:textColor="@color/BLUE"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>